    "to": [0, "-100%"],
    "from": [0, 0],
    "easing": "in_quad",
    "duration": "($transition_time_pop / 2)",
    "resettable": true,
    "play_event": "screen.exit_pop",
    "reset_event": "screen.exit_end"
  },
  "dlg_animate_fade_in_reader": {
    "anim_type": "alpha",
